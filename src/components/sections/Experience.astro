---
import Section from "../Section.astro"

import { work } from "@cv"
---

<Section title="Experiencia laboral">
  <ul>
    {
      work.map(
        ({ name, startDate, endDate, position, summary, highlights, skills, url }) => {
          const startYear = new Date(startDate).getFullYear()
          const endYear =
            endDate != null ? new Date(endDate).getFullYear() : "Actual"

          return (
            <li class="mb-12">
              <article>
                <header class="flex justify-between align-start mb-2">
                  <div>
                    <h3 class="text-lg font-semibold mb-1">
                      <a href={url} title={`Ver ${name}`} target="_blank">
                        {/* <span class="bg-black/90 text-white pl-2 pr-0.5">{name.slice(0, 1)}</span>{name.slice(1, name.length)} */}
                        {name}
                      </a>
                    </h3>
                    <h4 class="text-gray-600">{position}</h4>
                  </div>

                  <div>
                    <time 
                      datetime={startDate}
                      data-title={startDate}>
                        {startYear}
                    </time>
                    {" - "}
                    <time 
                      datetime={endDate}
                      data-title={endDate}>
                        {endYear}
                    </time>
                  </div>
                </header>

                <footer class="text-sm text-gray-600">
                  <p>{summary}</p>
                  <ul class="list-disc mt-4 pl-4">
                    {highlights.map((highlight) => (
                      <li class="mb-2">
                        {highlight}
                      </li>
                    ))}
                  </ul>
                  <p class="font-semibold mt-4">
                      Destrezas
                  </p>
                  <p class="text-xs">
                    {skills.join(", ")}
                  </p>
                </footer>
              </article>
            </li>
          )
        }
      )
    }
  </ul>
</Section>

<style>
  time {
    color: #555;
    font-size: 0.85rem;
    min-width: 102px;
    cursor: default;
  }
  
  @media (width <= 700px) {
    time {
      text-align: right;
    }
  }
</style>
